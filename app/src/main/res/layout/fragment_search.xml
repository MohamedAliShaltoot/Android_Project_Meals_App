<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Search Bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search value"
        app:hintTextColor="@color/black"
        app:startIconDrawable="@drawable/search_icon"
        app:boxStrokeColor="@color/til_stroke_color"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="none"
            android:focusable="false"
            android:cursorVisible="false"
            android:textColorHint="@color/gray"
            android:imeOptions="actionSearch"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:textColor="@color/white"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check"
            app:checkedIconVisible="true"
            app:chipIconVisible="false"
            app:chipStrokeWidth="1.5dp"
            app:chipStrokeColor="@color/primary"
            app:chipBackgroundColor="@color/chip_bg_selector"
            app:rippleColor="@color/primary"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="6dp"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="@color/white"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check"
            app:checkedIconVisible="true"
            app:chipIconVisible="false"
            app:chipStrokeColor="@color/primary"
            app:chipBackgroundColor="@color/chip_bg_selector"
            app:rippleColor="@color/primary"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="6dp"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingredient"
            android:textColor="@color/white"
            app:checkedIcon="@drawable/ic_check"
            app:checkedIconVisible="true"
            app:chipIconVisible="false"
            app:chipStrokeColor="@color/primary"
            app:chipBackgroundColor="@color/chip_bg_selector"
            app:rippleColor="@color/primary"
            android:checkable="true"
            app:chipSpacingHorizontal="28dp"
            app:chipSpacingVertical="26dp"
            style="@style/Widget.MaterialComponents.Chip.Choice" />
        <com.google.android.material.chip.Chip
            android:id="@+id/chipName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check"
            app:checkedIconVisible="true"
            app:chipIconVisible="false"
            app:chipStrokeColor="@color/primary"
            app:chipBackgroundColor="@color/chip_bg_selector"
            app:rippleColor="@color/primary"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>

    </com.google.android.material.chip.ChipGroup>

    <!-- Placeholder -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieIdle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        app:lottie_rawRes="@raw/no_data_found"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:visibility="gone"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="32dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieEmpty"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:lottie_rawRes="@raw/no_data_found"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:layout_marginTop="12dp"
            android:text="No meals found"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

</LinearLayout>
